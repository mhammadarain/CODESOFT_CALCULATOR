<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/solution_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/result_tv"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="36dp" />

    <TextView
        android:id="@+id/result_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btns_layouts"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="64dp" />

    <LinearLayout
        android:id="@+id/btns_layouts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#222121"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_c"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:text="C"
                android:textColor="@color/black"
                android:backgroundTint="#BFBBBB"
                android:textStyle="bold"
                android:textSize="32dp"
                android:layout_margin="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_open_bracket"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:text="("
                android:textColor="@color/black"
                android:backgroundTint="#BFBBBB"
                android:textStyle="bold"
                android:textSize="32dp"
                android:layout_margin="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_close_bracket"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:text=")"
                android:textColor="@color/black"
                android:backgroundTint="#BFBBBB"
                android:textStyle="bold"
                android:textSize="32dp"
                android:layout_margin="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_divide"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:text="/"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:backgroundTint="#FF9800"
                android:textSize="32dp"
                android:layout_margin="12dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_7"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:text="7"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="32dp"
                android:backgroundTint="#595757"
                android:layout_margin="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_8"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:text="8"
                android:backgroundTint="#595757"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="32dp"
                android:layout_margin="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_9"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:text="9"
                android:backgroundTint="#595757"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="32dp"
                android:layout_margin="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_multiply"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                android:backgroundTint="#FF9800"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:text="*"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="32dp"
                android:layout_margin="12dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_4"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:text="4"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="32dp"
                android:backgroundTint="#595757"
                android:layout_margin="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_5"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:text="5"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:backgroundTint="#595757"
                android:textSize="32dp"
                android:layout_margin="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_6"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:text="6"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="32dp"
                android:backgroundTint="#595757"
                android:layout_margin="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_plus"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:text="+"
                android:backgroundTint="#FF9800"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="32dp"
                android:layout_margin="12dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_1"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:text="1"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="32dp"
                android:backgroundTint="#595757"
                android:layout_margin="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_2"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:text="2"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="32dp"
                android:backgroundTint="#595757"
                android:layout_margin="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_3"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:text="3"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="32dp"
                android:backgroundTint="#595757"
                android:layout_margin="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_minus"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:text="-"
                android:backgroundTint="#FF9800"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="32dp"
                android:layout_margin="12dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_ac"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:text="AC"
                android:textStyle="bold"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:backgroundTint="#BFBBBB"
                android:layout_margin="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_0"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:text="0"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:backgroundTint="#595757"
                android:textSize="32dp"
                android:layout_margin="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_dot"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:text="."
                android:backgroundTint="#595757"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="42dp"
                android:layout_margin="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_equals"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:text="="
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="32dp"
                android:backgroundTint="#FF9800"
                android:layout_margin="12dp"/>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>